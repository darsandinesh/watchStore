    </div>

    <!-- count change -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        function quantityChange(pro, count, price) {
            ///let quantity = document.getElementById('countUpdate').value;
            //console.log(quantity);
            //count = parseInt(count);

            //console.log('enter');
            //console.log(count);

            $.ajax({
                url: '/change-quentity',
                data: {
                    name: pro,
                    count: count,
                    price: price
                },
                method: 'post',
                dataType: 'json',
                success: (response) => {

                    //Update the content of an element with the ID 'quantity'
                    if (response) {
                        console.log(response, 'response got')
                        console.log(response.quantity, 'value kitti')

                        //console.log(price)
                        console.log('success response came');
                        document.getElementById(`${pro}`).innerHTML = response.quantity;
                        document.getElementById(`${pro}+hai`).innerHTML = response.totalPrice;
                        document.getElementById('totalAmount').innerHTML = response.totalAmount
                        document.getElementById('totalAmounts').innerHTML = response.totalAmount
                        //if (response.quantity == 10 || response.quantity == 1) {
                        //    location.reload()
                        //}

                    } else {
                        console.log('error in ajax for updating the quantity of the product')
                    }
                }
            });
        }
    </script>



