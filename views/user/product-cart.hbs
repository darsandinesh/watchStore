<body class="product-cart checkout-cart blog">

    <!-- header -->
    {{> user_header}}

    <!-- main content -->
    <div class="main-content" id="cart">
        <!-- main -->
        <div id="wrapper-site">
            <!-- breadcrumb -->
            <nav class="breadcrumb-bg">
                <div class="container no-index">
                    <div class="breadcrumb">
                        <ol>
                            <li>
                                <a href="#">
                                    <span>Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <span>Shopping Cart</span>
                                </a>
                            </li>
                        </ol>
                    </div>
                </div>
            </nav>
            <div class="container">
                <div class="row">
                    <div id="content-wrapper" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 onecol">
                        <section id="main">
                            <div class="cart-grid row">

                                <div class="col-md-9 col-xs-12 check-info">
                                    <h1 class="title-page">Shopping Cart</h1>
                                    <form action="/checkout" method="post">
                                        <div class="cart-container">
                                            {{#if catData}}

                                            <div class="cart-overview js-cart">
                                                <ul class="cart-items">
                                                    {{#each catData}}
                                                    <li class="cart-item">
                                                        <div class="product-line-grid row justify-content-between">
                                                            <!--  product left content: image-->
                                                            <div class="product-line-grid-left col-md-2">
                                                                <span class="product-image media-middle">
                                                                    <a href="product-detail.html">
                                                                        <img class="img-fluid" src="{{this.image}}"
                                                                            alt="Organic Strawberry Fruits">
                                                                    </a>
                                                                </span>
                                                            </div>
                                                            <div class="product-line-grid-body col-md-6">
                                                                <div class="product-line-info">
                                                                    <a class="label" href="product-detail.html"
                                                                        data-id_customization="0">{{this.product}}</a>
                                                                </div>
                                                                <div class="product-line-info product-price">
                                                                    {{#if this.offer}}
                                                                    <del><span class="value">Rs.{{this.price}}</span></del>
                                                                    <span class="value">Rs.{{this.offerPrice}}</span>
                                                                    {{else}}
                                                                    <span class="value">Rs.{{this.offerPrice}}</span>
                                                                    {{/if}}

                                                                </div>
                                                                {{!-- <div class="product-line-info">
                                                                    <span class="label-atrr">Size:</span>
                                                                    <span class="value">S</span>
                                                                </div>
                                                                <div class="product-line-info">
                                                                    <span class="label-atrr">Color:</span>
                                                                    <span class="value">Blue</span>
                                                                </div> --}}
                                                            </div>
                                                            <div
                                                                class="product-line-grid-right text-center product-line-actions col-md-4">
                                                                <div class="row">
                                                                    <div class="col-md-5 col qty">
                                                                        <div class="label">Qty:</div>
                                                                        <div class="quantity">
                                                                            {{!-- <input type="text" name="qty"
                                                                                value="{{this.quentity}}"
                                                                                class="input-group form-control"
                                                                                id="countUpdate"> --}}
                                                                            {{!-- <select class="form-select"
                                                                                aria-label="Default select example"
                                                                                name="status" style="width: 40px;">
                                                                                <option>
                                                                                    {{this.quentity}}</option>
                                                                                <option value="1">1</option>
                                                                                <option value="2">2</option>
                                                                                <option value="3">3</option>
                                                                                <option value="4">4</option>
                                                                                <option value="5">5</option>

                                                                            </select> --}}
                                                                            <p class="input-group form-control"
                                                                                id={{this.product}}>{{this.quentity}}
                                                                            </p>

                                                                            <span class="input-group-btn-vertical">
                                                                                {{!-- {{#ifNotEquals this.quentity
                                                                                '10'}} --}}
                                                                                <button
                                                                                    class="btn btn-touchspin js-touchspin bootstrap-touchspin-up"
                                                                                    type="button"
                                                                                    onclick="quantityChange('{{this.product}}' ,1,'{{this.offerPrice}}')">
                                                                                    +
                                                                                    {{!-- ><a
                                                                                        href="/increaseQuantity/{{this.product}}">
                                                                                        +
                                                                                    </a> --}}
                                                                                </button>
                                                                                {{!-- {{/ifNotEquals}} --}}
                                                                                {{!-- {{#ifNotEquals this.quentity '1'}}
                                                                                --}}
                                                                                <button
                                                                                    class="btn btn-touchspin js-touchspin bootstrap-touchspin-down"
                                                                                    type="button"
                                                                                    onclick="quantityChange('{{this.product}}',-1,'{{this.offerPrice}}')">
                                                                                    -
                                                                                    {{!-- ><a
                                                                                        href="/decreaseQuantity/{{this.product}}">
                                                                                        -
                                                                                    </a> --}}
                                                                                </button>
                                                                                {{!-- {{/ifNotEquals}} --}}
                                                                            </span>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-5 col price">
                                                                        <div class="label">Total:</div>
                                                                        <div class="product-price total">
                                                                            <p id="{{this.product}}+hai">
                                                                                Rs.{{multiply this.offerPrice
                                                                                this.quentity}}
                                                                            </p>
                                                                        </div>
                                                                    </div>
                                                                    <div
                                                                        class="col-md-2 col text-xs-right align-self-end">
                                                                        <div class="cart-line-product-actions ">
                                                                            <a class="remove-from-cart" rel="nofollow"
                                                                                href="/delete-item-cart/{{this.product}}"
                                                                                data-link-action="delete-from-cart"
                                                                                data-id-product="1"
                                                                                onclick="return confirm('Are you sure?');">
                                                                                <i class="fa fa-trash-o"
                                                                                    aria-hidden="true"></i>
                                                                            </a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </li>

                                                    {{/each}}
                                                </ul>
                                            </div>
                                        </div>
                                        {{!-- <a href="/checkout" class="continue btn btn-primary pull-xs-right">
                                            Continue
                                        </a> --}}
                                        <button class="btn btn-primary">Continue</button>
                                    </form>
                                    <br>
                                    <a href="/home" class="continue btn btn-primary pull-xs-right">
                                        Continue Shopping
                                    </a>
                                    {{else}}

                                    <h5>Cart is empty</h5>
                                    <br>
                                    <a href="/home" class="continue btn btn-primary pull-xs-right">
                                        Continue Shopping
                                    </a>

                                    {{/if}}
                                </div>

                                {{#if catData}}
                                <div class="cart-grid-right col-xs-12 col-lg-3">
                                    <div class="cart-summary">
                                        <div class="cart-detailed-totals">
                                            <div class="cart-summary-products">
                                                <div class="summary-label">There are {{catDataCount}} item in your cart
                                                </div>
                                            </div>
                                            <div class="cart-summary-line" id="cart-subtotal-products">
                                                <span class="label js-subtotal">
                                                    Total Price:
                                                </span>
                                                <span class="value">Rs. <p id="totalAmount">{{totalPrice}}</p></span>
                                            </div>
                                            <div class="cart-summary-line" id="cart-subtotal-shipping">
                                                <span class="label">
                                                    Total Shipping:
                                                </span>
                                                <span class="value">Free</span>
                                                <div>
                                                    <small class="value"></small>
                                                </div>
                                            </div>
                                            <div class="cart-summary-line cart-total">
                                                <span class="label">Total:</span>
                                                <span class="value">
                                                    <p id="totalAmounts">{{totalPrice}}</p>(tax incl.)
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="block-reassurance">
                                        <ul>
                                            <li>
                                                <div class="block-reassurance-item">
                                                    <img src="../user/img/product/check1.png"
                                                        alt="Security policy (edit with Customer reassurance module)">
                                                    <span>Security policy (edit with Customer reassurance module)</span>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="block-reassurance-item">
                                                    <img src="../user/img/product/check2.png"
                                                        alt="Delivery policy (edit with Customer reassurance module)">
                                                    <span>Delivery policy (edit with Customer reassurance module)</span>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="block-reassurance-item">
                                                    <img src="../user/img/product/check3.png"
                                                        alt="Return policy (edit with Customer reassurance module)">
                                                    <span>Return policy (edit with Customer reassurance module)</span>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                {{/if}}
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
    {{> user_footer}}

    <!-- back top top -->
    <div class="back-to-top">
        <a href="#">
            <i class="fa fa-long-arrow-up"></i>
        </a>
    </div>

    <!-- menu mobie left -->
    <div class="mobile-top-menu d-md-none">
        <button type="button" class="close" aria-label="Close">
            <i class="zmdi zmdi-close"></i>
        </button>
        <div class="tiva-verticalmenu block" data-count_showmore="17">
            <div class="box-content block-content">
                <div class="verticalmenu" role="navigation">
                    <ul class="menu level1">
