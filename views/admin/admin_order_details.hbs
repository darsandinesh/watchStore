<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Dark Bootstrap Admin </title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="robots" content="all,follow">
  <!-- Bootstrap CSS-->
  <link rel="stylesheet" href="/admin/vendor/bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome CSS-->
  <link rel="stylesheet" href="/admin/vendor/font-awesome/css/font-awesome.min.css">
  <!-- Custom Font Icons CSS-->
  <link rel="stylesheet" href="/admin/css/font.css">
  <!-- Google fonts - Muli-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Muli:300,400,700">
  <!-- theme stylesheet-->
  <link rel="stylesheet" href="/admin/css/style.default.css" id="theme-stylesheet">
  <!-- Custom stylesheet - for your changes-->
  <link rel="stylesheet" href="/admin/css/custom.css">
  <!-- Favicon-->
  <link rel="shortcut icon" href="/admin/img/favicon.ico">
  <!-- Tweaks for older IEs--><!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>

<body>

  {{> admin_header}}

  <div class="d-flex align-items-stretch">
    <!-- Sidebar Navigation-->
    <nav id="sidebar">
      <!-- Sidebar Header-->
      {{!-- <!-- Sidebar Navidation Menus--><span class="heading">Main</span> --}}
      <ul class="list-unstyled">
        <li><a href="/admin/dashbord"> <i class="icon-home"></i>Dashboard </a></li>
        <li><a href="/admin/products"> <i class="icon-grid"></i>Products </a></li>
        <li><a href="/admin/userDetails"> <i class="fa fa-bar-chart"></i>Users </a></li>
        <li><a href="/admin/category"> <i class="icon-padnote"></i>Category </a></li>
        <li class="active"><a href="/admin/orders"> <i class="icon-padnote"></i>Orders </a></li>
        <li><a href="/admin/coupon"> <i class="icon-padnote"></i>Coupon </a></li>
        {{!-- <li><a href="/admin/offers"> <i class="icon-padnote"></i>Offers </a></li> --}}
      </ul>
    </nav>
    <!-- Sidebar Navigation end-->
    <div class="page-content">
      <!-- Page Header-->
      <div class="page-header no-margin-bottom">
        <div class="container-fluid">
          <h2 class="h5 no-margin-bottom">Order Details</h2>
        </div>
      </div>


      {{!-- <div class="container-fluid m-2 pd-2">
        <div class="container-fluid">
          <form class="d-flex" role="search" method="post">
            <input class="form-control " type="search" placeholder="Search" aria-label="Search" name="search"
              value="{{nameSearch}}">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div> --}}

      {{!-- {{#each data}} --}}
      <div class="container mt-5 p-5">
        <div class="row">
          <div class="container mt-5">

            <div class="row">
              <div class="col-md-6">
                <img src="{{data.img}}" alt="image" style="height: 50%;">
              </div>
              <div>
                <h2>{{data.product}}</h2>
                <br>
                <p>OrderId : {{data.orderId}}</p>
                <p>Usernane : {{data.username}}</p>
                <p>Quantity: {{data.quentity}}</p>
                <p>Price : {{data.price}}</p>
                <p>Address : {{data.address.houseName}}, {{data.address.city}}, {{data.address.state}},
                  {{data.address.country}}</p>
                <p>Pin Code: {{data.address.pincode}}</p>
                <p>Payment Type : COD</p>

                {{#ifEquals data.status 'CANCELED'}}
                <p style="color: red;">Status : {{data.status}}</p>
                {{else ifEquals data.status 'Delivered Successfully'}}
                {{#if data.returnStatus}}
                {{#ifEquals data.returnStatus 2}}
                <p style="color: red;">Return request rejected</p>
                {{else}}
                <p style="color: green;">Returned Successfully</p>
                {{/ifEquals}}
                {{else if data.returnreason}}
                {{#if data.returnStatus}}

                {{else}}
                <p style="color: aquamarine;">Return reason :  {{data.returnreason}}</p>
                <a href="/admin/returnFail?id={{data.orderId}}&product={{data.product}}" class="btn btn-danger" onclick="return confirm('Do you want to reject the return?')">Reject</a>
                <a href="/admin/returnsuccess?id={{data.orderId}}&product={{data.product}}" class="btn btn-success"
                onclick="return confirm('Do you want to accept the return?')">Accepte</a>
                {{/if}}
                {{else}}
                <p style="color: green;">Status : {{data.status}}</p>
                
                
                {{/if}}
                {{else}}
                <p>Status : {{data.status}}</p>
                Cancel : <a href="/admin/deleteOrder?orderId={{data.orderId}}&product={{data.product}}"
                  class="btn btn-danger" onclick="return confirm('Do you want to cancel the order?')">Cancel</a>
                {{/ifEquals}}


              </div>
            </div>

          </div>
        </div>
      </div>


      {{> admin_footer}}
    </div>
  </div>
  <!-- JavaScript files-->
  <script src="/admin/vendor/jquery/jquery.min.js"></script>
  <script src="/admin/vendor/popper.js/umd/popper.min.js"> </script>
  <script src="/admin/vendor/bootstrap/js/bootstrap.min.js"></script>
  <script src="/admin/vendor/jquery.cookie/jquery.cookie.js"> </script>
  <script src="/admin/vendor/chart.js/Chart.min.js"></script>
  <script src="/admin/vendor/jquery-validation/jquery.validate.min.js"></script>
  <script src="/admin/js/front.js"></script>
</body>

</html>